<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/gs_btn_from" />
    <item android:state_pressed="true" android:drawable="@drawable/gs_btn_to" />
    <item android:state_focused="true"  android:drawable="@drawable/gs_btn_from" />-->

    <!--按下-->
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/btn_gradient_color_green_press"/>
            <gradient
                android:endColor="@color/btn_gradient_color_green_press"
                android:startColor="@color/btn_gradient_color_green_press" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <!--焦点-->
    <item android:state_focused="true"  >
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/btn_gradient_color_green_normal"/>
            <gradient
                android:endColor="@color/btn_gradient_color_green_normal"
                android:startColor="@color/btn_gradient_color_green_normal" />
            <corners
                android:radius="5dp"  />
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="false" >
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/btn_gradient_color_green_normal"/>
            <gradient
                android:endColor="@color/btn_gradient_color_green_normal"
                android:startColor="@color/btn_gradient_color_green_normal" />
            <corners
                android:radius="5dp"  />
        </shape>
    </item>
</selector>