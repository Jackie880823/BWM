<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/gs_btn_from" />
    <item android:state_pressed="true" android:drawable="@drawable/gs_btn_to" />
    <item android:state_focused="true"  android:drawable="@drawable/gs_btn_from" />-->

    <!--按下-->
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/btn_bg_color_green_press"
                android:startColor="@color/btn_bg_color_green_press" />
            <corners
                android:radius="@dimen/default_button_radius" />
        </shape>
    </item>

    <!--焦点-->
    <item android:state_focused="true"  >
        <shape>
            <gradient
                android:endColor="@color/btn_bg_color_green_press"
                android:startColor="@color/btn_bg_color_green_press" />
            <corners
                android:radius="@dimen/default_button_radius"  />
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@color/btn_bg_color_green_normal"
                android:startColor="@color/btn_bg_color_green_normal" />
            <corners
                android:radius="@dimen/default_button_radius"  />
        </shape>
    </item>
</selector>