<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/gs_btn_from" />
    <item android:state_pressed="true" android:drawable="@drawable/gs_btn_to" />
    <item android:state_focused="true"  android:drawable="@drawable/gs_btn_from" />-->

    <!--按下-->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/translucence_color"
                android:startColor="@color/translucence_color"/>
            <corners
                android:radius="@dimen/default_button_radius"/>
        </shape>
    </item>

    <!--焦点-->
    <item android:state_focused="true">
        <shape>
            <gradient
                android:endColor="@android:color/background_dark"
                android:startColor="@android:color/background_dark"/>
            <corners
                android:radius="@dimen/default_button_radius"/>
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:endColor="@android:color/white"
                android:startColor="@android:color/white"/>
            <corners
                android:radius="@dimen/default_button_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@android:color/background_dark"
                      android:startColor="@android:color/background_dark"/>
            <corners android:radius="@dimen/default_button_radius"/>
        </shape>
    </item>
</selector>