    <!--焦点-->
    <item android:state_focused="true"  >
        <shape>
            <gradient
                android:endColor="@color/default_text_color_while"
                android:startColor="@color/btn_bg_color_gray_normal" />
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="false" >
        <shape>
            <gradient
