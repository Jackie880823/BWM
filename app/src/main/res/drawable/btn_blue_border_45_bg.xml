<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:state_enabled="false" android:drawable="@drawable/gs_btn_from" />
    <item android:state_pressed="true" android:drawable="@drawable/gs_btn_to" />
    <item android:state_focused="true"  android:drawable="@drawable/gs_btn_from" />-->

    <!--按下-->
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/btn_text_color_press_gray"
                android:startColor="@color/btn_text_color_press_gray" />
            <stroke
                android:width="2dp"
                android:color="@color/tab_color_press41"/>
            <corners
                android:radius="45dp" />
        </shape>
    </item>

    <!--焦点-->
    <item android:state_focused="true"  >
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/tab_color_press41"/>
            <gradient
                android:endColor="@color/btn_text_color_press_gray"
                android:startColor="@color/btn_text_color_press_gray" />
            <corners
                android:radius="45dp"  />
        </shape>
    </item>

    <!--默认-->
    <item android:state_enabled="false" >
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/tab_color_press4"/>
            <gradient
                android:endColor="@color/default_text_color_while"
                android:startColor="@color/default_text_color_while" />
            <corners
                android:radius="45dp"  />
        </shape>
    </item>
</selector>