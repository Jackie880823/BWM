<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/btn_gradient_color_green_normal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bondwithme.BondWithMe.ui.start.ResetPasswordSuccessfulActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reset_password_successful"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="bottom"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="@dimen/_28dp"
                android:textStyle="normal"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/default_text_color_while"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/text_start_password_reset"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="@dimen/_30dp"
                android:textStyle="normal"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/default_text_color_while"
                android:text="@string/text_start_successful"
                android:gravity="center"/>

        </LinearLayout>


        <TextView
            style="@style/tv_btn_start_white"
            android:id="@+id/tv_ok"
            android:text="@string/ok"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
    </LinearLayout>

    <include
        layout="@layout/progress_layout"/>

</RelativeLayout>
