<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bondwithme.BondWithMe.widget.CircularNetworkImage
        android:id="@+id/message_icon_image"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_6dp"
        android:src="@drawable/default_head_icon"
        app:border="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_toRightOf="@id/message_icon_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/little_play" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_80dp"
            android:layout_marginLeft="@dimen/_20dp">

            <com.bondwithme.BondWithMe.widget.HorizontalProgressBarWithNumber
                android:id="@+id/id_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"/>

            <TextView
                android:id="@+id/date_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_progressbar"
                android:text="2015年05月24日"
                android:textColor="@color/default_text_color_light"
                android:textSize="@dimen/_12dp" />

            <TextView
                android:id="@+id/audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/id_progressbar"
                android:text="00:19" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>