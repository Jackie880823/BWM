<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_content_bg"
    tools:context="com.bondwithme.BondWithMe.ui.SignUpPhoneActivity">

    <include
        android:id="@+id/fragment_main_top"
        layout="@layout/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_below="@+id/fragment_main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:id="@+id/rl_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_country_code"
                        android:textColor="@color/default_text_color_dark"
                        android:padding="16dp"
                        android:textSize="@dimen/text_medium_size"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                            <TextView
                                android:id="@+id/tv_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:textColor="@color/default_text_color_dark"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:textSize="@dimen/text_medium_size"/>
                            <ImageView
                                android:id="@+id/country"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/profile_right"
                                android:layout_gravity="center"/>
                    </LinearLayout>
            </RelativeLayout>

            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C8C8C8"
            android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_phone_number"
                        android:padding="16dp"
                        android:textColor="@color/default_text_color_dark"
                        android:textSize="@dimen/text_medium_size"/>
                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="phone"
                        android:layout_marginRight="16dp"
                        android:textSize="@dimen/text_medium_size"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/default_text_color_dark"
                        android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/ll_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_sign_up_phone_warning"
                        android:textSize="@dimen/text_mirco_size"
                        android:layout_marginLeft="22dp"
                        android:textColor="@color/default_text_color_dark"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_medium_size"
                        android:textStyle="bold"
                        android:textColor="@color/bold_text_color_red"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp">
                    <EditText
                        android:id="@+id/et_verification"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:background="@drawable/et_round_white"
                        android:textColorHint="@color/default_text_color_light"
                        android:textColor="@color/default_text_color_dark"
                        android:textSize="@dimen/text_medium_size"
                        android:lines="1"
                        android:padding="16dp"
                        android:hint="@string/text_et_hint_verification_code"/>
                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/text_btn_verification"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_medium_size"
                        android:layout_marginLeft="@dimen/default_view_margin"
                        android:textColor="@drawable/btn_request_color"
                        android:background="@drawable/btn_request_bg"
                        />
            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/ll_username_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_username_registration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_sign_up_username"
                            android:textSize="20dp"
                            android:textColor="@color/default_text_color_blue"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/default_text_color_blue"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp">
                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"
                        android:background="@drawable/btn_next_bg"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/text_next"/>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>

