<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bondwithme.BondWithMe.ui.start.VerificationActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <include
            android:id="@+id/fragment_main_top"
            layout="@layout/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_main_top"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"></View>
                    <TextView
                        style="@style/tv_start_light_medium"
                        android:id="@+id/tv_terms"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:textSize="@dimen/text_small_size"
                        android:text="@string/text_start_verification_prompt" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>
                </LinearLayout>

                <TextView
                    style="@style/tv_start_default"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="+6013528899226"
                    android:textColor="@color/btn_bg_color_green_normal"
                    android:singleLine="true"
                    android:textSize="@dimen/_30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </View>
                <EditText
                    style="@style/et_start_code"
                    android:layout_width="0dp"
                    android:layout_weight="3" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </View>
            </LinearLayout>

            <TextView
                style="@style/tv_start_light_small"
                android:textSize="@dimen/text_small_size"
                android:text="@string/text_start_verification_time_prompt"
                android:layout_marginTop="@dimen/default_view_margin"
                android:singleLine="true"
                />
        </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/br_log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_large_size"
            android:text="@string/text_start_next"
            app:rippleSpeed="50"
            android:background="@color/btn_bg_color_green_normal"
            android:layout_marginBottom="@dimen/default_content_padding"
            android:layout_marginLeft="@dimen/default_view_margin"
            android:layout_marginRight="@dimen/default_view_margin"
            app:rippleColor="@color/btn_bg_color_green_press"
            app:clickAfterRipple="true"/>

    <include layout="@layout/progress_layout"/>


</RelativeLayout>
