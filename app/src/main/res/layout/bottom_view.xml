<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tab_color_normal"
    android:weightSum="5">

    <RelativeLayout
        android:id="@+id/iv_tab_icon0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:focusable="true"
            >

            <ImageView
                android:id="@+id/iv_tab_icon0_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_workspace"
                />

            <TextView
                android:id="@+id/iv_tab_icon0_tv"
                android:layout_gravity="center_horizontal"
                style="@style/text_default"
                android:textSize="@dimen/text_size_13sp"
                android:text="@string/title_tab_diary" />

        </LinearLayout>
        <ImageView
            android:id="@+id/red_point_1"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:src="@drawable/love_alert"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_tab_icon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/iv_tab_icon1_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_event"

                />


            <TextView
                android:id="@+id/iv_tab_icon1_tv"
                style="@style/text_default"
                android:text="@string/title_tab_event"
                android:textSize="@dimen/text_size_13sp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/red_point_2"
            android:layout_alignParentRight="true"
            style="@style/RedPoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_tab_icon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/iv_tab_icon2_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_news"

                />

            <TextView
                android:id="@+id/iv_tab_icon2_tv"
                android:layout_gravity="center_horizontal"
                style="@style/text_default"
                android:textSize="@dimen/text_size_13sp"
                android:text="@string/title_tab_my_news" />

        </LinearLayout>

        <TextView
            android:id="@+id/red_point_3"
            android:layout_alignParentRight="true"
            style="@style/RedPoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_tab_icon3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/iv_tab_icon3_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_message"

                />

            <TextView
                android:id="@+id/iv_tab_icon3_tv"
                style="@style/text_default"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_13sp"
                android:text="@string/title_tab_chat" />

        </LinearLayout>
        <TextView
            android:id="@+id/red_point_4"
            android:layout_alignParentRight="true"
            style="@style/RedPoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:visibility="gone"
            />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/iv_tab_icon4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/iv_tab_icon4_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_more"

                />

            <TextView
                android:id="@+id/iv_tab_icon4_tv"
                style="@style/text_default"
                android:text="@string/title_tab_more"
                android:textSize="@dimen/text_size_13sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <TextView
            android:id="@+id/red_point_5"
            android:layout_alignParentRight="true"
            style="@style/RedPoint"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:visibility="gone"
            />

    </RelativeLayout>


</LinearLayout>
