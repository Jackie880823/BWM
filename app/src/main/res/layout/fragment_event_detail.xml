    <!-- 隐藏的选项 -->
    <RelativeLayout
        android:id="@+id/event_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/default_text_color_while"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/option_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_content_padding">

                <LinearLayout
                    android:id="@+id/option_no_going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_no_going"
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/status_not_going_normal" />

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/default_view_margin"
                        android:text="@string/text_not_going" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_maybe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_maybe"
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/status_maybe_normal" />

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/default_view_margin"
                        android:text="@string/text_maybe" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_going"
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/status_going_normal" />

                    <TextView
                        style="@style/text_light_default"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/default_view_margin"
                        android:text="@string/text_going" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/option_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/default_content_padding"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/default_small_button_width_height"
                    android:layout_height="@dimen/default_small_button_width_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/status_not_going_normal" />

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_view_margin"
                    android:text="@string/cancel" />
            </LinearLayout>

            <View
                android:id="@+id/option_split_line"
                style="@style/split_line_default" />
        </LinearLayout>
    </RelativeLayout>

        <ScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/comment_bar"
            android:layout_below="@+id/event_options"
            android:fillViewport="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_content_padding"
                android:paddingLeft="@dimen/default_content_padding"
                android:paddingRight="@dimen/default_content_padding">


                <include
                    layout="@layout/event_detail_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_view_margin" />

                <android.support.v7.widget.CardView
                    android:id="@+id/comment_container"
                    style="@style/CardViewDefault"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/default_content_padding">

                            <ImageView
                                android:id="@+id/icon_comments"
                                android:layout_width="@dimen/default_small_button_width_height"
                                android:layout_height="@dimen/default_small_button_width_height"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_comments"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                style="@style/text_dark_default"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/default_view_margin"
                                android:layout_toRightOf="@+id/icon_comments"
                                android:layout_centerVertical="true"
                                android:text="@string/text_comments" />

                            <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                                android:id="@+id/progressBar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@color/bg_progressBar"
                                android:layout_centerVertical="true"
                                />

                        </RelativeLayout>

                        <View
                            android:id="@+id/comment_split_line"
                            style="@style/split_line_default"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_event_comment_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <com.madx.bwm.widget.SendCommentView
            android:id="@+id/comment_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        </com.madx.bwm.widget.SendCommentView>


