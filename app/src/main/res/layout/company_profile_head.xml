<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp">

        <ImageView
            android:id="@+id/iv_profile_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_title_bg"/>

        <TextView
            android:id="@+id/tv_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#55000000"
            android:gravity="center"
            android:text="@string/text_profile_change_prompt"
            android:textColor="@color/default_text_color_while"
            android:visibility="gone"/>
    </RelativeLayout>

    <View style="@style/split_line_default"/>

    <EditText
        android:id="@+id/et_company_name"
        style="@style/text_dark_default"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="@string/hint_company_name"
        android:padding="@dimen/default_content_padding"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_company_name"
        style="@style/text_dark_default"
        android:layout_width="match_parent"
        android:hint="@string/hint_company_name"
        android:padding="@dimen/default_content_padding"/>

    <View style="@style/split_line_default"/>

    <EditText
        android:id="@+id/et_company_description"
        style="@style/text_dark_default"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="@string/hint_company_description"
        android:minLines="5"
        android:gravity="top"
        android:padding="@dimen/default_content_padding"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_content_padding">

        <TextView
            android:id="@+id/tv_company_description"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:hint="@string/hint_company_description"
            android:minLines="5"/>

        <TextView
            android:id="@+id/switch_text_show"
            style="@style/text_default"
            android:text="@string/more"
            android:textColor="@android:color/holo_blue_bright"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>


    <View style="@style/split_line_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_address"
            android:textColor="@color/default_text_color_light"
            android:textSize="@dimen/text_mirco_size"/>

        <EditText
            android:id="@+id/et_address"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/hint_company_address"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_address"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:hint="@string/hint_company_address"/>
    </LinearLayout>

    <View style="@style/split_line_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_phone"
            android:textColor="@color/default_text_color_light"
            android:textSize="@dimen/text_mirco_size"/>

        <EditText
            android:id="@+id/et_phone"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:autoLink="phone"
            android:background="@null"
            android:hint="@string/hint_company_phone"
            android:inputType="phone"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_phone"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:autoLink="phone"
            android:hint="@string/hint_company_phone"/>
    </LinearLayout>

    <View style="@style/split_line_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_email"
            android:textColor="@color/default_text_color_light"
            android:textSize="@dimen/text_mirco_size"/>

        <EditText
            android:id="@+id/et_email"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:autoLink="email"
            android:background="@null"
            android:hint="@string/hint_company_email"
            android:inputType="textEmailAddress"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_email"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:autoLink="email"
            android:hint="@string/hint_company_email"/>
    </LinearLayout>

</LinearLayout>
