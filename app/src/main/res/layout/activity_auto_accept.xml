<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_text_color_while"
    tools:context="com.madxstudio.co8.ui.more.AutoAcceptActivity">

    <include
        android:id="@+id/fragment_main_top"
        layout="@layout/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_autoaccept"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_main_top"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_view_margin"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding"
            android:visibility="gone">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"
                android:text="@string/text_setting_2_1"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_all"
                style="@style/checkbox_default"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding"
            android:visibility="gone">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"
                android:text="@string/text_setting_2_2"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_chd"
                style="@style/checkbox_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding"
            android:visibility="gone">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"

                android:text="@string/text_setting_2_3"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_oth"
                style="@style/checkbox_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding"
            android:visibility="gone">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"

                android:text="@string/text_setting_2_4"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_prt"
                style="@style/checkbox_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"
                android:text="@string/text_setting_2_5"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_sib"
                style="@style/checkbox_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding">

            <TextView
                style="@style/text_title_default"
                android:layout_centerVertical="true"
                android:text="@string/text_setting_2_6"
                android:textColor="@color/default_text_color_dark" />

            <CheckBox
                android:id="@+id/auto_acp_sps"
                style="@style/checkbox_default"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View style="@style/split_line_default" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_main_top">

        <include layout="@layout/progress_layout" />
    </RelativeLayout>


</RelativeLayout>
