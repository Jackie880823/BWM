<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10dp"
    android:paddingBottom="@dimen/_10dp">

    <com.bondwithme.BondWithMe.widget.CircularNetworkImage
        android:id="@+id/message_icon_image"
        app:border="false"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_6dp"
        android:src="@drawable/default_head_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/_46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_icon_image"
        android:gravity="center"
        android:textColor="@color/default_text_color_dark"
        android:layout_marginLeft="@dimen/_6dp"
        android:text="即使但是时"
        android:singleLine="true" />

    <com.bondwithme.BondWithMe.widget.FreedomSelectionTextView
        android:id="@+id/message_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_40dp"
        android:minWidth="@dimen/_55dp"
        android:gravity="left|center"
        android:autoLink="web"
        android:linksClickable="true"
        android:background="@drawable/message_left"
        android:layout_toRightOf="@id/message_icon_image"
        android:textColor="@color/default_text_color_dark"
        android:textSize="@dimen/text_medium_size"
        android:textIsSelectable="true"
        android:text="看比赛开始吧" />

    <TextView
        android:id="@+id/date_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/default_text_color_light"
        android:textSize="@dimen/_12dp"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_below="@+id/message_item_content_tv"
        android:text="2015年05月24日"
        android:layout_alignLeft="@+id/message_item_content_tv" />

</RelativeLayout>