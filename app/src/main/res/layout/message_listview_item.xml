<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/network_image_default"
                        app:border="false"
                        android:id="@+id/message_listview_image"/>
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:text=""
                        android:background="@drawable/bg_num_red_message"
                        android:layout_gravity="top|right"
                        android:gravity="center"
                        android:textSize="@dimen/text_mirco_size"
                        android:textColor="@color/default_text_color_while"/>
            </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/groupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toLeftOf="@+id/groupTime"
                        android:layout_marginRight="32dp"
                        android:textSize="@dimen/text_medium_size"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/groupTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_mirco_size"
                        android:textColor="@color/default_text_color_light"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/groupMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tab_color_press31"
                android:textSize="@dimen/text_mirco_size"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:border="false"/>
                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

                    <com.bondwithme.BondCorp.widget.CircularNetworkImage
                        android:id="@+id/image8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:border="false"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>