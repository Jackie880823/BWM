<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_text_color_while"
    >

    <include
        android:id="@+id/fragment_main_top"
        layout="@layout/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_main_top"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/send_layout"
            android:layout_below="@+id/fragment_main_top"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_view_margin">

            <TextView
                style="@style/text_light_default"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding"
                android:text="@string/text_setting_1_title"
                android:textStyle="bold" />

            <View
                style="@style/split_line_default"
                android:layout_marginTop="@dimen/default_view_margin"
                android:background="@color/tab_color_press4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_1"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_2"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_1_3"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_4"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4"
                    />

            </RelativeLayout>

            <View
                style="@style/split_line_default"
                android:background="@color/tab_color_press4" />

            <TextView
                style="@style/text_light_default"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding"
                android:layout_marginTop="@dimen/default_view_margin"
                android:text="@string/text_setting_2_title"
                android:textStyle="bold" />

            <View
                style="@style/split_line_default"
                android:layout_marginTop="@dimen/default_view_margin"
                android:background="@color/tab_color_press4" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_2_1"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_2_2"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_chd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_2_3"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_oth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_2_4"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_prt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_2_5"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_sib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_2_6"
                    android:textColor="@color/default_text_color_dark"
                    />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/auto_acp_sps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
