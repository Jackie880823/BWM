<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_text_color_while"
    tools:context="com.bondwithme.BondWithMe.ui.more.BirthdayAlertActivity">

    <include
        android:id="@+id/fragment_main_top"
        layout="@layout/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_birthday_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send_layout"
        android:layout_below="@+id/fragment_main_top"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_view_margin"
        android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_1"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_2"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"

                    android:text="@string/text_setting_1_3"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4" />

            </RelativeLayout>

            <View style="@style/split_line_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_content_padding"
                android:layout_marginRight="@dimen/default_content_padding">

                <TextView
                    style="@style/text_title_default"
                    android:layout_centerVertical="true"
                    android:text="@string/text_setting_1_4"
                    android:textColor="@color/default_text_color_dark" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/dob_alert_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/tab_color_press4"
                    />

            </RelativeLayout>

            <View style="@style/split_line_default" />

    </LinearLayout>

    <include layout="@layout/progress_layout"/>

</RelativeLayout>
