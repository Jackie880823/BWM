<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_add_new_member"
            android:layout_width="match_parent"
            style="@style/text_dialog_style"
            android:gravity="center_horizontal"
            android:text="@string/text_add_new_member"
            android:padding="@dimen/default_content_padding"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <TextView
            android:id="@+id/tv_create_new_group"
            android:layout_width="match_parent"
            style="@style/text_dialog_style"
            android:gravity="center_horizontal"
            android:text="@string/text_create_new_group"
            android:padding="@dimen/default_content_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            style="@style/text_dialog_style"
            android:gravity="center_horizontal"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/high_light_color"
            android:padding="@dimen/default_content_padding" />

</LinearLayout>