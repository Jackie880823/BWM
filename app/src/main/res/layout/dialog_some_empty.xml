<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_no_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_gray"
        android:gravity="center"
        android:minHeight="@dimen/_60dp"
        android:paddingLeft="@dimen/default_content_padding"
        android:paddingRight="@dimen/default_content_padding"
        android:text="@string/text_add_new_member"
        android:textColor="#333"
        android:textSize="@dimen/_18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/text_dialog_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_content_padding"
            android:text="@string/text_dialog_cancel"
            android:textSize="@dimen/_18dp"
            android:visibility="gone" />

        <View
            android:id="@+id/line_view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/default_split_line"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ok"
            style="@style/text_dialog_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_gray"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_content_padding"
            android:text="@string/text_dialog_yes"
            android:textColor="#0066ff"
            android:textSize="@dimen/_18dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>