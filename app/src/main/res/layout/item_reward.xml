<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180dp"
        android:layout_margin="@dimen/_8dp"

        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_reward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:id="@+id/rl_count_down_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/reward_count_down">

            <TableLayout
                android:id="@+id/tl_count_down_time"
                android:layout_width="@dimen/_120dp"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3,4,5,6"

                >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_white_center"
                        android:text="07"/>

                    <TextView
                        android:text=":"
                        style="@style/text_white_center"/>

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01"
                        style="@style/text_white_center"
                        />

                    <TextView
                        android:text=":"
                        style="@style/text_white_center"/>

                    <TextView
                        android:id="@+id/tv_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07"
                        style="@style/text_white_center"/>

                    <TextView
                        android:text=":"
                        style="@style/text_white_center"/>

                    <TextView
                        android:id="@+id/tv_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07"
                        style="@style/text_white_center"/>





                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_days"
                        style="@style/text_white_center"/>

                    <TextView
                        android:text=":"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_hrs"
                        style="@style/text_white_center"/>

                    <TextView
                        android:text=":"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_min"
                        style="@style/text_white_center"/>

                    <TextView
                        android:text=":"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_sec"
                        style="@style/text_white_center"/>





                </TableRow>


            </TableLayout>



            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tl_count_down_time"
                android:padding="@dimen/_4dp"
                style="@style/text_white_center"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reward_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/reward_info"
            android:padding="@dimen/_4dp">

            <TextView
                android:id="@+id/tv_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% off storewide"
                android:layout_marginLeft="@dimen/_8dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium_size"
                style="@style/text_white_center"/>

            <TextView
                android:id="@+id/tv_reward_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/tv_reward_title"
                android:layout_marginLeft="@dimen/_8dp"
                android:textColor="@color/btn_gray_normal"/>
            <TextView
                android:id="@+id/tv_reward_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_8dp"
                android:textStyle="bold"
                android:textColor="@color/indicator_5"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_reward_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/reward_locked"
            android:visibility="invisible"></RelativeLayout>

        <TextView
            android:id="@+id/tv_fully_redeemed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fully_redeemed"
            style="@style/text_white_center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_large_size"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/lock_icon"
            android:visibility="visible"/>

    </RelativeLayout>



    <View style="@style/split_line_default"/>

</LinearLayout>