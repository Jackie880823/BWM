<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0123456789"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:paddingLeft="@dimen/default_content_padding"
            android:textSize="@dimen/text_medium_size"
            android:paddingTop="@dimen/default_content_padding"
            android:paddingBottom="@dimen/default_content_padding"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cb"
            />

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/checkbox_default"
            android:padding="@dimen/default_content_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/default_split_line" />
    />

</RelativeLayout>