<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/network_image_default"
            android:visibility="gone"
            tools:visibility="visible"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_workspace_title"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_workspace_date"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold"
            tools:text="HeadLine Here"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_workspace_date"
            style="@style/text_color_hint_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="By Jarvis Chan: 26 Feb 2016"/>
    </RelativeLayout>

    <View style="@style/split_line_default"/>

    <LinearLayout
        android:id="@+id/layout_horizontal_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/img_attachments"
            android:layout_width="@dimen/default_small_button_width_height"
            android:layout_height="@dimen/default_small_button_width_height"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_attachment_visible"/>

        <ImageView
            android:id="@+id/img_members"
            android:layout_width="@dimen/default_small_button_width_height"
            android:layout_height="@dimen/default_small_button_width_height"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_members"/>

        <ImageView
            android:id="@+id/img_todo_list"
            android:layout_width="@dimen/default_small_button_width_height"
            android:layout_height="@dimen/default_small_button_width_height"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_todo_list_visible"/>

        <ImageView
            android:id="@+id/img_privilege"
            android:layout_width="@dimen/default_small_button_width_height"
            android:layout_height="@dimen/default_small_button_width_height"
            android:src="@drawable/ic_privilege_only_me"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_vertical_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_attachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/default_content_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/default_content_padding">

            <ImageView
                android:id="@+id/img_attachments_icon"
                android:layout_width="@dimen/default_small_button_width_height"
                android:layout_height="@dimen/default_small_button_width_height"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_attachment_visible"/>

            <TextView
                android:id="@+id/txt_attachments_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_attachments_icon"
                android:layout_toRightOf="@+id/img_attachments_icon"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/default_content_padding"
                android:paddingLeft="@dimen/default_content_padding"
                android:paddingRight="@dimen/default_content_padding"
                android:paddingStart="@dimen/default_content_padding"
                android:text="@string/txt_attachments"/>

            <TextView
                android:id="@+id/txt_attachments_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12"/>
        </RelativeLayout>

        <View
            style="@style/split_line_default"/>

        <RelativeLayout
            android:id="@+id/layout_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/default_content_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/default_content_padding">

            <ImageView
                android:id="@+id/img_members_icon"
                android:layout_width="@dimen/default_small_button_width_height"
                android:layout_height="@dimen/default_small_button_width_height"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_members"/>

            <TextView
                android:id="@+id/txt_members_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_members_icon"
                android:layout_toRightOf="@+id/img_members_icon"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/default_content_padding"
                android:paddingLeft="@dimen/default_content_padding"
                android:paddingRight="@dimen/default_content_padding"
                android:paddingStart="@dimen/default_content_padding"
                android:text="@string/text_members"/>

            <TextView
                android:id="@+id/txt_members_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12"/>
        </RelativeLayout>

        <View
            style="@style/split_line_default"/>

        <RelativeLayout
            android:id="@+id/layout_todo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/default_content_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/default_content_padding">

            <ImageView
                android:id="@+id/img_todo_list_icon"
                android:layout_width="@dimen/default_small_button_width_height"
                android:layout_height="@dimen/default_small_button_width_height"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_todo_list_visible"/>

            <TextView
                android:id="@+id/txt_todo_list_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_todo_list_icon"
                android:layout_toRightOf="@+id/img_todo_list_icon"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/default_content_padding"
                android:paddingLeft="@dimen/default_content_padding"
                android:paddingRight="@dimen/default_content_padding"
                android:paddingStart="@dimen/default_content_padding"
                android:text="@string/txt_to_do_list"/>

            <TextView
                android:id="@+id/txt_todo_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12"/>
        </RelativeLayout>

        <View
            style="@style/split_line_default"/>

        <RelativeLayout
            android:id="@+id/layout_privilege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/default_content_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/default_content_padding">

            <ImageView
                android:id="@+id/img_privilege_icon"
                android:layout_width="@dimen/default_small_button_width_height"
                android:layout_height="@dimen/default_small_button_width_height"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_privilege_only_me"/>

            <TextView
                android:id="@+id/txt_privilege_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_privilege_icon"
                android:layout_toRightOf="@+id/img_privilege_icon"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/default_content_padding"
                android:paddingLeft="@dimen/default_content_padding"
                android:paddingRight="@dimen/default_content_padding"
                android:paddingStart="@dimen/default_content_padding"
                android:text="@string/txt_me_only"/>

            <TextView
                android:id="@+id/txt_privilege_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <View
            style="@style/split_line_default"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/img_collapse_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_relapse"/>
    </RelativeLayout>


    <android.support.v7.widget.AppCompatTextView
        style="@style/text_dark_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:maxLines="5"
        android:paddingBottom="@dimen/default_content_padding"
        android:paddingTop="@dimen/default_content_padding"
        android:text="This attribute is typically set on the root element in a layout XML file, and records which activity the layout is associated with (at designtime, since obviously a layout can be used by more than one layout). This will for example be used by the layout editor to guess a default theme, since themes are defined in the Manifest and are associated with activities, not layouts. You can use the same dot prefix as in manifests to just specify the activity class without the full application package name as a prefix."/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_discussions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucence_color"
        android:paddingBottom="@dimen/default_content_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/default_content_padding"
        android:text="@string/txt_discussions"/>


</LinearLayout>