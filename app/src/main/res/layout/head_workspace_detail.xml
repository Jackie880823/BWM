<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/network_image_default"
            android:visibility="gone"
            tools:visibility="visible"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_workspace_title"
            style="@style/text_dark_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_workspace_date"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_large_size"
            android:textStyle="bold"
            tools:text="HeadLine Here"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_workspace_date"
            style="@style/text_color_hint_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_title"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="By Jarvis Chan: 26 Feb 2016"/>
    </RelativeLayout>

    <View style="@style/split_line_default"/>

    <include layout="@layout/layout_work_space_icons"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_workspace_description"
        style="@style/text_dark_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:maxLines="5"
        android:paddingBottom="@dimen/default_content_padding"
        android:paddingTop="@dimen/default_content_padding"
        android:text="This attribute is typically set on the root element in a layout XML file, and records which activity the layout is associated with (at designtime, since obviously a layout can be used by more than one layout). This will for example be used by the layout editor to guess a default theme, since themes are defined in the Manifest and are associated with activities, not layouts. You can use the same dot prefix as in manifests to just specify the activity class without the full application package name as a prefix."/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_discussions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucence_color"
        android:paddingBottom="@dimen/default_content_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/default_content_padding"
        android:text="@string/txt_discussions"/>


</LinearLayout>