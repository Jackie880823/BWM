<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_text_color_while"
    android:orientation="vertical"
    android:padding="@dimen/default_content_padding"
    tools:context="com.madx.bwm.ui.TabPictureFragment">

    <com.madx.bwm.widget.CustomGridView
        android:id="@+id/gv_pictures"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_light">

        <TextView
            android:id="@+id/btn_to_photo"
            style="@style/text_dark_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/default_content_padding"
            android:text="@string/text_album" />

        <View
            style="@style/split_line_default"
            android:layout_width="@dimen/default_line_height"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_to_camera"
            style="@style/text_dark_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/default_content_padding"
            android:text="@string/text_camera" />

    </LinearLayout>

</LinearLayout>


