<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_text_color_while"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_bond_alert"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/more_bondalert" />

                    <TextView
                        android:id="@+id/tv_num"
                        style="@style/RedPoint"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_bond_alert" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_me"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/more_me" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_me" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_add_member"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/add_member_white" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_add_member" />

            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_alert_news"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bondalert_news_icon" />

                    <TextView
                        android:id="@+id/news_alert_num"
                        style="@style/RedPoint"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_news" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_rewards"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rewards" />

                    <TextView
                        android:id="@+id/rewards_alert_num"
                        style="@style/RedPoint"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/title_rewards" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/btn_sticker_store"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/stickies_icon" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_sticker_store" />

            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_archive"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/more_archive" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_archive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_about_us"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/more_about_us" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_about_us" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/default_user_head_width_height"
                    android:layout_height="@dimen/default_user_head_width_height"
                    android:background="@drawable/circular_bg_blue"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="@dimen/default_small_button_width_height"
                        android:layout_height="@dimen/default_small_button_width_height"
                        android:layout_centerInParent="true"
                        android:src="@drawable/more_setting" />
                </RelativeLayout>

                <TextView
                    style="@style/text_dark_default"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/default_view_margin"
                    android:text="@string/text_setting" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/default_content_padding"
                android:textSize="@dimen/text_medium_size"
                android:visibility="gone"
                android:textColor="@color/tab_color_press4"
                android:text="V 1.9.0"/>


        </RelativeLayout>


    </LinearLayout>

</ScrollView>