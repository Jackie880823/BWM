<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_text_color_while"
    android:fillViewport="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_bond_alert"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_bondalert" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_alignParentRight="true"
                            style="@style/RedPoint"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:visibility="visible"
                            />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_bond_alert" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/btn_me"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_me" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_me" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_family"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_family" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_my_family" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_share"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_tell_a_friend" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_tell_friend" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/btn_setting"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_setting" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_setting" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_about_us"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_about_us" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_about_us" />

                </LinearLayout>


                <!--<LinearLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:orientation="vertical">-->

                    <!--<RelativeLayout-->
                        <!--android:id="@+id/btn_sticker_store"-->
                        <!--android:layout_width="@dimen/default_user_head_width_height"-->
                        <!--android:layout_height="@dimen/default_user_head_width_height"-->
                        <!--android:background="@drawable/circular_bg_blue"-->
                        <!--android:clickable="true">-->

                        <!--<ImageView-->
                            <!--android:layout_width="@dimen/default_small_button_width_height"-->
                            <!--android:layout_height="@dimen/default_small_button_width_height"-->
                            <!--android:layout_centerInParent="true"-->
                            <!--android:src="@drawable/more_sticket_store" />-->
                    <!--</RelativeLayout>-->

                    <!--<TextView-->
                        <!--style="@style/text_dark_default"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:layout_marginTop="@dimen/default_view_margin"-->
                        <!--android:text="@string/text_sticker_store" />-->

                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">


                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/btn_contact_us"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_contact_us" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_contact_us" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_terms"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_blue"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_terms" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_terms" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/btn_sign_out"
                        android:layout_width="@dimen/default_user_head_width_height"
                        android:layout_height="@dimen/default_user_head_width_height"
                        android:background="@drawable/circular_bg_gray"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/default_small_button_width_height"
                            android:layout_height="@dimen/default_small_button_width_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/more_sign_out" />
                    </RelativeLayout>

                    <TextView
                        style="@style/text_dark_default"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/default_view_margin"
                        android:text="@string/text_sign_out" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:weightSum="3">

            </LinearLayout>


        </LinearLayout>

</ScrollView>