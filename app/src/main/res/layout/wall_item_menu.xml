<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_item_add_photo"
            >

            <TextView
                android:id="@+id/tv_add_new_member"
                style="@style/text_dialog_style"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_content_padding"
                android:text="@string/text_add_new_member" />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <LinearLayout
            android:id="@+id/menu_item_save_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_create_new_group"
                style="@style/text_dialog_style"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_content_padding"
                android:text="@string/text_create_new_group" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_item_edit_diary"
            >

            <TextView
                style="@style/text_dialog_style"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_content_padding"
                android:text="@string/cancel"
                android:textColor="@color/high_light_color"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_item_delete_diary"
            >

            <TextView
                style="@style/text_dialog_style"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_content_padding"
                android:text="@string/cancel"
                android:textColor="@color/high_light_color"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/default_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_item_cancel"
            >

            <TextView
                style="@style/text_dialog_style"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/default_content_padding"
                android:text="@string/cancel"
                android:textColor="@color/high_light_color"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>