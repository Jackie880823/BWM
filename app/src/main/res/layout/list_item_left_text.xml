<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.madx.bwm.widget.CircularNetworkImage
        android:id="@+id/left_iv"
        app:border="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_iv"
        android:gravity="center"
        android:textColor="@color/default_text_color_dark"
        android:layout_marginLeft="6dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/left_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:minWidth="55dp"
        android:gravity="left|center"
        android:background="@drawable/message_left"
        android:layout_toRightOf="@+id/left_iv"
        android:textColor="@color/default_text_color_dark"
        android:textSize="@dimen/text_medium_size"
        />

    <TextView
        android:id="@+id/left_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/default_text_color_light"
        android:textSize="@dimen/text_mirco_size"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/left_message_tv"
        android:layout_alignLeft="@+id/left_message_tv"/>

</RelativeLayout>