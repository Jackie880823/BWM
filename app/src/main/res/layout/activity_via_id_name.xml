<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.madx.bwm.ui.ViaIdNameActivity">
        <include
            android:id="@+id/fragment_main_top"
            layout="@layout/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/fragment_main_top">
                <EditText
                    android:id="@+id/et_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_round_white"
                    android:padding="@dimen/default_content_padding"
                    android:textSize="@dimen/text_medium_size"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:hint="@string/hint_id_accout"
                    android:singleLine="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/tv_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/text_warning_invaild_id_name"
                    android:visibility="gone"
                    android:textColor="@color/default_text_color_red"
                    android:textSize="@dimen/text_mirco_size"/>
                <TextView
                    android:id="@+id/tv_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_round_white"
                    android:padding="@dimen/default_content_padding"
                    android:textSize="@dimen/text_medium_size"
                    android:singleLine="true"
                    android:hint="@string/text_select_relationship"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@drawable/profile_right"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_content_padding"
            android:layout_alignParentBottom="true"
            android:text="@string/text_add"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/text_large_size"
            android:background="@drawable/btn_chat_send_bg"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"/>

</RelativeLayout>
