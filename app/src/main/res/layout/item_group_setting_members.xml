<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/bg_white_gray"
    android:layout_gravity="center">
        <com.bondwithme.BondWithMe.widget.CircularNetworkImage
            android:id="@+id/cni_main"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/default_view_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cni_main"
            android:layout_toLeftOf="@+id/iv_waitting"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_view_margin"
            android:layout_marginRight="@dimen/default_view_margin"
            android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_medium_size"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_text_color_light"
                    android:textSize="@dimen/text_medium_size"
                    android:visibility="gone"
                    android:text="Admin"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_waitting"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/default_view_margin"
            />
</RelativeLayout>