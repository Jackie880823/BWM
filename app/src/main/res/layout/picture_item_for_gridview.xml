<?xml version="1.0" encoding="utf-8"?>

<com.madxstudio.co8.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/pic_delete"
        android:layout_width="@dimen/default_small_button_width_height"
        android:layout_height="@dimen/default_small_button_width_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/translucence_color"
        android:scaleType="centerInside"
        android:src="@drawable/x_delete_icon" />

</com.madxstudio.co8.widget.SquareRelativeLayout>



